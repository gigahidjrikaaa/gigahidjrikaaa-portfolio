# Backend environment variables
ENVIRONMENT=development
API_V1_STR=/api/v1
PROJECT_NAME=Giga Hidjrika Portfolio Backend

# Database
DATABASE_URL=postgresql+psycopg2://USER:PASSWORD@HOST:5432/DB_NAME

# Security
SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate limiting (per window, in-memory)
RATE_LIMIT_WINDOW_SECONDS=60
RATE_LIMIT_LOGIN_PER_WINDOW=10
RATE_LIMIT_CONTACT_PER_WINDOW=10

# Admin bootstrap (optional, must set all or none)
ADMIN_USERNAME=
ADMIN_EMAIL=
ADMIN_PASSWORD=

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001"]

# Email (SMTP)
FROM_EMAIL=
TO_EMAIL=
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Cloudinary
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
CLOUDINARY_FOLDER=portfolio
